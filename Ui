-- ========== CREATE WINDOW ==========
local Window = WindUI:CreateWindow({
    Title = "Rat Hub X",
    Icon = "rat",
    Author = "Ratkinator",
    Folder = "RatHubX",
    Size = UDim2.fromOffset(550, 400),
    Transparent = true,
    BackgroundImageTransparency = 0.15,
    Theme = "Dark",
    Resizable = true,
    HideSearchBar = false,
})

-- Create tabs
local HomeTab = Window:Tab({
    Title = "Home",
    Icon = "message-circle",
})

local SettingsTab = Window:Tab({
    Title = "Settings",
    Icon = "settings",
})

-- Select home tab
HomeTab:Select()

-- Home tab - just the button (no section)
HomeTab:Button({
    Title = "Discord Server Link",
    Desc = "Copy Discord invite to clipboard",
    Callback = function()
        local invite = "https://discord.gg/scmGBzXN24"
        if setclipboard then
            setclipboard(invite)
            Window:Notify({
                Title = "Copied",
                Description = "Discord link copied",
                Icon = "copy",
                Color = Color3.fromHex("#9d4edd"),
                Time = 3
            })
        elseif writeclipboard then
            writeclipboard(invite)
            Window:Notify({
                Title = "Copied",
                Description = "Discord link copied",
                Icon = "copy",
                Color = Color3.fromHex("#9d4edd"),
                Time = 3
            })
        else
            Window:Notify({
                Title = "Error",
                Description = "Clipboard not available",
                Icon = "x-circle",
                Color = Color3.fromHex("#9d4edd"),
                Time = 3
            })
        end
    end
})

-- Create tag with single purple color
Window:Tag({
    Title = "v2.1.0",
    Icon = "rat",
    Color = Color3.fromHex("#9d4edd"), -- Single purple color
    Radius = 8
})

-- Settings tab - theme dropdown
local themeNames = {"Dark Purple", "Neon Cyber", "Crimson Blood", "Emerald Forest", "Sunset Gold", "Galaxy Purple", "Midnight", "Ocean Teal"}

local ThemeDropdown = SettingsTab:Dropdown({
    Title = "Select Theme",
    Desc = "Choose from 8 gradient themes",
    Values = themeNames,
    Value = "Dark Purple",
    Callback = function(selectedTheme)
        WindUI:SetTheme(selectedTheme)
        
        -- Update open button gradient based on theme
        if selectedTheme == "Dark Purple" then
            Window:EditOpenButton({
                Title = "Rat Hub X",
                Icon = "rbxassetid://77209058521997",
                CornerRadius = UDim.new(0, 16),
                StrokeThickness = 2,
                Color = ColorSequence.new(
                    Color3.fromHex("#6d28d9"),
                    Color3.fromHex("#9d4edd")
                ),
                OnlyMobile = false,
                Enabled = true,
                Draggable = true,
            })
        elseif selectedTheme == "Neon Cyber" then
            Window:EditOpenButton({
                Title = "Rat Hub X",
                Icon = "rbxassetid://77209058521997",
                CornerRadius = UDim.new(0, 16),
                StrokeThickness = 2,
                Color = ColorSequence.new(
                    Color3.fromHex("#00ccff"),
                    Color3.fromHex("#00ffff")
                ),
                OnlyMobile = false,
                Enabled = true,
                Draggable = true,
            })
        elseif selectedTheme == "Crimson Blood" then
            Window:EditOpenButton({
                Title = "Rat Hub X",
                Icon = "rbxassetid://77209058521997",
                CornerRadius = UDim.new(0, 16),
                StrokeThickness = 2,
                Color = ColorSequence.new(
                    Color3.fromHex("#ff3333"),
                    Color3.fromHex("#ff6666")
                ),
                OnlyMobile = false,
                Enabled = true,
                Draggable = true,
            })
        elseif selectedTheme == "Emerald Forest" then
            Window:EditOpenButton({
                Title = "Rat Hub X",
                Icon = "rbxassetid://77209058521997",
                CornerRadius = UDim.new(0, 16),
                StrokeThickness = 2,
                Color = ColorSequence.new(
                    Color3.fromHex("#00cc66"),
                    Color3.fromHex("#00ff88")
                ),
                OnlyMobile = false,
                Enabled = true,
                Draggable = true,
            })
        elseif selectedTheme == "Sunset Gold" then
            Window:EditOpenButton({
                Title = "Rat Hub X",
                Icon = "rbxassetid://77209058521997",
                CornerRadius = UDim.new(0, 16),
                StrokeThickness = 2,
                Color = ColorSequence.new(
                    Color3.fromHex("#ff9900"),
                    Color3.fromHex("#ffcc00")
                ),
                OnlyMobile = false,
                Enabled = true,
                Draggable = true,
            })
        elseif selectedTheme == "Galaxy Purple" then
            Window:EditOpenButton({
                Title = "Rat Hub X",
                Icon = "rbxassetid://77209058521997",
                CornerRadius = UDim.new(0, 16),
                StrokeThickness = 2,
                Color = ColorSequence.new(
                    Color3.fromHex("#cc33ff"),
                    Color3.fromHex("#ff66ff")
                ),
                OnlyMobile = false,
                Enabled = true,
                Draggable = true,
            })
        elseif selectedTheme == "Midnight" then
            Window:EditOpenButton({
                Title = "Rat Hub X",
                Icon = "rbxassetid://77209058521997",
                CornerRadius = UDim.new(0, 16),
                StrokeThickness = 2,
                Color = ColorSequence.new(
                    Color3.fromHex("#333333"),
                    Color3.fromHex("#666666")
                ),
                OnlyMobile = false,
                Enabled = true,
                Draggable = true,
            })
        elseif selectedTheme == "Ocean Teal" then
            Window:EditOpenButton({
                Title = "Rat Hub X",
                Icon = "rbxassetid://77209058521997",
                CornerRadius = UDim.new(0, 16),
                StrokeThickness = 2,
                Color = ColorSequence.new(
                    Color3.fromHex("#00cccc"),
                    Color3.fromHex("#00ffff")
                ),
                OnlyMobile = false,
                Enabled = true,
                Draggable = true,
            })
        end
        
        Window:Notify({
            Title = "Theme Applied",
            Description = selectedTheme .. " theme loaded",
            Icon = "palette",
            Color = Color3.fromHex("#9d4edd"),
            Time = 2
        })
    end
})

-- Set default open button with Dark Purple gradient
Window:EditOpenButton({
    Title = "Rat Hub X",
    Icon = "rbxassetid://77209058521997",
    CornerRadius = UDim.new(0, 16),
    StrokeThickness = 2,
    Color = ColorSequence.new(
        Color3.fromHex("#6d28d9"),
        Color3.fromHex("#9d4edd")
    ),
    OnlyMobile = false,
    Enabled = true,
    Draggable = true,
})

-- Apply default theme
WindUI:SetTheme("Dark Purple")

print("Rat Hub X loaded - 8 themes with advanced gradients, single purple tag")
