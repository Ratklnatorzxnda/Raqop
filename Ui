-- Rat Hub X
local WindUI = loadstring(game:HttpGet("https://github.com/Footagesus/WindUI/releases/latest/download/main.lua"))()

-- ========== THEMES WITH ADVANCED GRADIENTS ==========
-- Dark Purple (Default) - Cool unique purple combination
WindUI:AddTheme({
    Name = "Dark Purple",
    
    Accent = WindUI:Gradient({
        ["0"] = { Color = Color3.fromHex("#6d28d9"), Transparency = 0 },
        ["100"] = { Color = Color3.fromHex("#4a1e6e"), Transparency = 0 },
    }, {
        Rotation = 45,
    }),
    
    Background = WindUI:Gradient({
        ["0"] = { Color = Color3.fromHex("#1a0b24"), Transparency = 0 },
        ["100"] = { Color = Color3.fromHex("#0f0618"), Transparency = 0 },
    }, {
        Rotation = 180,
    }),
    
    Outline = WindUI:Gradient({
        ["0"] = { Color = Color3.fromHex("#9d4edd"), Transparency = 0 },
        ["100"] = { Color = Color3.fromHex("#c77dff"), Transparency = 0 },
    }, {
        Rotation = 90,
    }),
    
    Text = Color3.fromHex("#e0aaff"),
    Placeholder = Color3.fromHex("#7a7a7a"),
    
    Button = WindUI:Gradient({
        ["0"] = { Color = Color3.fromHex("#5a189a"), Transparency = 0 },
        ["100"] = { Color = Color3.fromHex("#7b2cbf"), Transparency = 0 },
    }, {
        Rotation = 135,
    }),
    
    Icon = WindUI:Gradient({
        ["0"] = { Color = Color3.fromHex("#c77dff"), Transparency = 0 },
        ["100"] = { Color = Color3.fromHex("#e0aaff"), Transparency = 0 },
    }, {
        Rotation = 225,
    }),
})

